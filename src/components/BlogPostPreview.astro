---
interface Props {
  title: string;
  excerpt: string;
  author: string;
  date: string;
  category: string;
  href: string;
}

const { title, excerpt, author, date, category, href } = Astro.props;
---

<article class="bg-white rounded-lg shadow-sm p-6">
  <div class="flex items-center space-x-2 mb-3">
    <span class="text-sm font-medium text-blue-600">{category}</span>
    <span class="text-gray-400">â€¢</span>
    <time class="text-sm text-gray-500">{date}</time>
  </div>
  <h3 class="text-xl font-semibold mb-2">
    <a href={href} class="hover:text-blue-600 transition-colors">
      {title}
    </a>
  </h3>
  <p class="text-gray-600 mb-4">{excerpt}</p>
  <div class="flex items-center">
    <span class="text-sm text-gray-500">By {author}</span>
  </div>
</article>