---
interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonHref: string;
}

const { title, description, buttonText, buttonHref } = Astro.props;
---

<div class="bg-primary-50 rounded-lg p-8 my-12">
  <div class="max-w-3xl mx-auto text-center">
    <h3 class="text-2xl font-bold text-gray-900 mb-4">{title}</h3>
    <p class="text-lg text-gray-600 mb-8">{description}</p>
    <a
      href={buttonHref}
      class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 transition-colors"
    >
      {buttonText}
    </a>
  </div>
</div>