---
interface Props {
  title: string;
  description: string;
  icon: string;
  href: string;
  category: string;
}

const { title, description, icon, category, href } = Astro.props;
---

<article class="bg-white rounded-lg shadow-sm hover:shadow-lg transition-all duration-300 p-6 group">
  <div class="flex items-start space-x-4">
    <div class="flex-shrink-0 w-12 h-12 rounded-full bg-primary-50 flex items-center justify-center">
      <span class="text-2xl">{icon}</span>
    </div>
    <div class="flex-1 min-w-0">
      <div class="flex items-center space-x-2">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-50 text-primary-700">
          {category}
        </span>
      </div>
      <h3 class="text-lg font-semibold mt-2 mb-2 text-gray-900 group-hover:text-primary-600 transition-colors">
        <a href={href} class="hover:text-primary-600 transition-colors">
          {title}
        </a>
      </h3>
      <p class="text-gray-600 text-sm leading-relaxed line-clamp-2">{description}</p>
      <div class="mt-4">
        <a 
          href={href} 
          class="inline-flex items-center text-sm font-medium text-primary-600 hover:text-primary-700 group-hover:translate-x-0.5 transition-all"
        >
          Learn more
          <svg class="w-4 h-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
            <path 
              fill-rule="evenodd" 
              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" 
              clip-rule="evenodd"
            />
          </svg>
        </a>
      </div>
    </div>
  </div>
</article>