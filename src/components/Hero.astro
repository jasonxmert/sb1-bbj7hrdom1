---
import { Image } from 'astro:assets';
---

<section class="relative bg-gradient-to-r from-primary-600 to-primary-700 text-white py-12 sm:py-16 lg:py-20 overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5 mix-blend-overlay">
    <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="grid" width="32" height="32" patternUnits="userSpaceOnUse">
          <path d="M0 32V0h32" fill="none" stroke="currentColor" stroke-width="1"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#grid)" />
    </svg>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      <div class="text-center lg:text-left">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-6 leading-tight">
          Empowering Classrooms and Middle-Class Living
        </h1>
        <p class="text-lg sm:text-xl mb-8 text-primary-50">
          Discover resources, tips, and strategies for educational excellence and smart financial living. Join thousands of educators and families making informed decisions.
        </p>
        <div class="flex flex-col sm:flex-row justify-center lg:justify-start space-y-4 sm:space-y-0 sm:space-x-4">
          <a
            href="/resources"
            class="bg-white text-primary-600 px-6 py-3 rounded-lg font-semibold hover:bg-primary-50 transition-all duration-200 inline-flex items-center justify-center shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
          >
            <span>Browse Resources</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
          <a
            href="/newsletter"
            class="bg-primary-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary-400 transition-all duration-200 inline-flex items-center justify-center shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
          >
            <span>Get Weekly Tips</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
            </svg>
          </a>
        </div>
      </div>
      
      <div class="hidden lg:block">
        <div class="relative">
          <div class="absolute inset-0 bg-primary-500 rounded-lg transform rotate-3 scale-105"></div>
          <Image
            src="https://images.unsplash.com/photo-1524178232363-1fb2b075b655"
            alt="Education and Learning"
            width={600}
            height={400}
            class="rounded-lg shadow-2xl relative z-10 transform transition-transform duration-300 hover:scale-[1.02]"
          />
        </div>
      </div>
    </div>

    <div class="mt-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
      <div class="bg-white bg-opacity-10 backdrop-blur-sm rounded-lg p-6 shadow-xl transform transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl">
        <span class="block text-2xl sm:text-3xl font-bold mb-2">1000+</span>
        <span class="text-primary-50">Educational Resources</span>
      </div>
      <div class="bg-white bg-opacity-10 backdrop-blur-sm rounded-lg p-6 shadow-xl transform transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl">
        <span class="block text-2xl sm:text-3xl font-bold mb-2">50K+</span>
        <span class="text-primary-50">Active Educators</span>
      </div>
      <div class="bg-white bg-opacity-10 backdrop-blur-sm rounded-lg p-6 shadow-xl transform transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl sm:col-span-2 lg:col-span-1">
        <span class="block text-2xl sm:text-3xl font-bold mb-2">100K+</span>
        <span class="text-primary-50">Families Supported</span>
      </div>
    </div>
  </div>
</section>