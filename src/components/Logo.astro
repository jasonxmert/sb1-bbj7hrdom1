---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const logoColors = {
  primary: '#0284c7',
  secondary: '#0ea5e9'
};
---

<div class={`flex items-center space-x-2 ${className}`}>
  <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M20 4L4 12L20 20L36 12L20 4Z" fill={logoColors.primary}/>
    <path d="M4 20L20 28L36 20" stroke={logoColors.secondary} stroke-width="2"/>
    <path d="M4 28L20 36L36 28" stroke={logoColors.secondary} stroke-width="2"/>
    <circle cx="20" cy="20" r="16" stroke={logoColors.primary} stroke-width="2" stroke-dasharray="4 4"/>
  </svg>
  <span class="text-2xl font-bold bg-gradient-to-r from-primary-600 to-primary-500 bg-clip-text text-transparent">
    Classdom
  </span>
</div>