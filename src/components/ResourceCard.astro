---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  image: {
    src: string;
    alt: string;
  };
  href: string;
  category: string;
}

const { title, description, image, href, category } = Astro.props;
---

<article class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow overflow-hidden">
  <Image
    src={image.src}
    alt={image.alt}
    width={400}
    height={250}
    class="w-full h-48 object-cover"
  />
  <div class="p-6">
    <span class="text-sm text-blue-600 font-medium">{category}</span>
    <h3 class="text-xl font-semibold mt-2 mb-3">
      <a href={href} class="hover:text-blue-600 transition-colors">
        {title}
      </a>
    </h3>
    <p class="text-gray-600">{description}</p>
  </div>
</article>