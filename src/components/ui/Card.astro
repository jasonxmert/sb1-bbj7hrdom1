---
interface Props {
  class?: string;
  hover?: boolean;
}

const { class: className, hover = true } = Astro.props;

const baseStyles = 'bg-white rounded-lg shadow-sm p-6';
const hoverStyles = hover ? 'hover:shadow-lg transition-shadow duration-200' : '';
---

<div class:list={[baseStyles, hoverStyles, className]}>
  <slot />
</div>