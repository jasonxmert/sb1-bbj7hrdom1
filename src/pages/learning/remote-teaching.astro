---
import Layout from '../../layouts/Layout.astro';
import AdSense from '../../components/AdSense.astro';
import VideoEmbed from '../../components/VideoEmbed.astro';
import { Image } from 'astro:assets';

const remoteTeachingResources = [
  { text: 'Distance Education Research', url: 'https://en.wikipedia.org/wiki/Distance_education' },
  { text: 'Online Learning Strategies', url: 'https://www.edutopia.org/online-learning' },
  { text: 'Virtual Teaching Best Practices', url: 'https://www.teachthought.com/technology/virtual-teaching' }
];

const featuredVideos = [
  {
    title: "Setting Up Your Virtual Classroom",
    videoId: "dQw4w9WgXcQ",
    description: "Step-by-step guide to creating an effective online learning environment"
  },
  {
    title: "Student Engagement in Remote Learning",
    videoId: "dQw4w9WgXcQ",
    description: "Strategies to keep students motivated and participating in virtual classes"
  }
];

const images = [
  {
    src: "https://images.unsplash.com/photo-1571260899304-425eee4c7efd",
    alt: "Teacher conducting online class",
    caption: "Modern remote teaching setup"
  },
  {
    src: "https://images.unsplash.com/photo-1587691592099-24045742c181",
    alt: "Student learning from home",
    caption: "Creating effective home learning environments"
  }
];
---

<Layout 
  title="Remote Teaching Guide"
  description="Comprehensive guide to effective remote teaching strategies and best practices"
>
  <main class="max-w-4xl mx-auto px-4 py-12">
    <article class="bg-white rounded-lg shadow-sm p-8">
      <header class="mb-8">
        <h1 class="text-3xl font-bold mb-4">Remote Teaching Guide</h1>
        <div class="text-gray-600">Master the art of virtual instruction</div>
      </header>

      <AdSense slot="content" />

      <div class="prose max-w-none">
        <h2>Getting Started with Remote Teaching</h2>
        <p>
          Remote teaching requires a unique approach to instruction, combining technology
          with proven pedagogical methods. This comprehensive guide will help you create
          an engaging virtual classroom environment.
        </p>

        <div class="my-8 grid grid-cols-1 md:grid-cols-2 gap-6">
          {images.map(image => (
            <figure class="relative">
              <Image
                src={image.src}
                alt={image.alt}
                width={600}
                height={400}
                class="rounded-lg"
              />
              <figcaption class="mt-2 text-sm text-gray-600 text-center">
                {image.caption}
              </figcaption>
            </figure>
          ))}
        </div>

        <h2>Essential Video Tutorials</h2>
        <div class="my-8 space-y-8">
          {featuredVideos.map(video => (
            <div class="space-y-4">
              <VideoEmbed
                videoId={video.videoId}
                title={video.title}
              />
              <h3 class="text-xl font-semibold">{video.title}</h3>
              <p class="text-gray-600">{video.description}</p>
            </div>
          ))}
        </div>

        <h2>Best Practices for Virtual Instruction</h2>
        <div class="bg-primary-50 p-6 rounded-lg my-8">
          <h3 class="font-semibold mb-4">Key Strategies:</h3>
          <ul class="list-disc pl-6">
            <li>Establish clear communication channels</li>
            <li>Create structured lesson plans</li>
            <li>Incorporate regular breaks</li>
            <li>Use multimedia resources effectively</li>
            <li>Implement interactive activities</li>
          </ul>
        </div>
      </div>

      <footer class="mt-8 pt-8 border-t">
        <h3 class="font-semibold mb-4">Additional Resources:</h3>
        <ul class="space-y-2">
          {remoteTeachingResources.map(resource => (
            <li>
              <a href={resource.url} class="text-primary-600 hover:underline">{resource.text}</a>
            </li>
          ))}
        </ul>
      </footer>
    </article>
  </main>
</Layout>